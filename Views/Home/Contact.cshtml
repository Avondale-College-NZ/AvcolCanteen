 @page
@model AvcolCanteen.Views.Home.ContactModel

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-4">Contact</h1>
            <p>Feel free to reach out to us for any inquiries or feedback!</p>
            <ul>
                <li><strong>Email:</strong> info@example.com</li>
                <li><strong>Location:</strong> By C Block</li>
                <li><strong>Hours:</strong> Mon - Fri: 8:00 AM - 1:30 PM</li>
            </ul>
        </div>
        <div class="col-md-6" style="padding-top:5px;">
            <h3>Send Us a Message</h3>
            <form>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input type="email" class="form-control" id="email" name="email">

                </div>
                <div class="form-group">
                    <label for="subject">Subject</label>
                    <input type="text" class="form-control" id="subject" name="subject">
                </div>
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea class="form-control" id="message" rows="5" name="message"></textarea>
                </div>
                <button type="submit" style="margin-top:20px;" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
