@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center" style="padding-top:5px;">


    <div id="carousel" class="carousel slide mx-auto" data-bs-ride="carousel" style="max-width: 1500px;-moz-border-radius: 10px 10px 10px 10px;
    -webkit-border-radius: 10px 10px 10px 10px;">

        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carousel" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#carousel" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#carousel" data-bs-slide-to="2"></button>
        </div>


        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Images/Artboard 1 new.png" alt="Food" class="d-block mx-auto" style="max-width: 100%; height: auto;  -moz-border-radius: 10px 10px 10px 10px;
    -webkit-border-radius: 10px 10px 10px 10px;">
            </div>
            <div class="carousel-item">
                <img src="~/Images/Artboard 2 new.png" alt="Food2" class="d-block mx-auto" style="max-width: 100%; height: auto; -moz-border-radius: 10px 10px 10px 10px;
    -webkit-border-radius: 10px 10px 10px 10px;">
            </div>
            <div class="carousel-item">
                <img src="~/Images/Artboard 3 new.png" alt="Food3" class="d-block mx-auto" style="max-width: 100%; height: auto; -moz-border-radius: 10px 10px 10px 10px;
    -webkit-border-radius: 10px 10px 10px 10px;">
            </div>
        </div>


        <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</div>
<div class="containerHome">
    <div class="MenuButton">
        <a href="@Url.Action("MenuPage", "Home")">
            <img class="glow" src="~/Images/menu.jpg" alt="MenuImage">
        </a>
    </div>
     <div class="Search">
            <h2 style="font-size:30px; margin-left:55px;">View our Menu or search</h2>
        </div>
    <form asp-controller="Products" asp-action="Index" method="get">
        <div class="searchcontainer">
            <input type="search" name="searchString" placeholder="Search ..." value="@ViewData["CurrentFilter"]" />
            <div class="search"></div>
        </div>
    </form>
</div>