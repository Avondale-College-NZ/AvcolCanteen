@model IEnumerable<AvcolCanteen.Models.Categories>

@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
    <form asp-controller="Categories" asp-action="Index" method="get" class="d-flex" style="margin-top:20px;">
        <div class="form-group mb-0">
            <input type="text" name="searchString" class="form-control searchbar" placeholder="Search Category Name" value="@ViewData["CurrentFilter"]" />
        </div>
        <input type="submit" value="Search" class="btn btn-primary ms-2" />
    </form>

    <a asp-action="Create" class="btn btn-success">Create New</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoryID" class="btn btn-warning btn-sm custom-warning-btn">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.CategoryID" class="btn btn-info btn-sm custom-info-btn">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.CategoryID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
